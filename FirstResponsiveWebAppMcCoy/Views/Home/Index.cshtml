@model FirstResponsiveWebAppMcCoy.Models.AgeModel
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/css/bootstrap.min.css" integrity="sha384-zCbKRCUGaJDkqS1kPbPd7TveP5iyJE0EjAuZQTgFLD2ylzuqKfdKlfG/eSrtxUkn" crossorigin="anonymous">
    <meta name="viewport" content="width=device-width" />
    <title>View</title>
</head>
<body>
    <section class="main-container">
        <div class=" text-center">       
            <div class="row">
                <div class="col-sm-4"></div>
                <div class="col-sm-4">
                    <h1 class="text-center">Current Age Calculator</h1>
                    <form asp-action="Index" method="post">
                        <div asp-validation-summary="All"></div>
                        <div>
                            <label asp-for="FullName">Full Name:</label>
                            <input asp-for="FullName" />
                        </div>
                        <div>
                            <label asp-for="BirthYear">Birth Year:</label>
                            <input asp-for="BirthYear" />
                        </div>
                        <div>
                            <label>Message:</label>
                            <input style="width:100%"value="@ViewBag.Name will be @ViewBag.CurrentAge by the end of this year" readonly />
                        </div>
                        <button type="submit">Submit</button>
                        <a asp-action="Index">Clear</a>
                    </form>
                </div>
                <div class="col-sm-4"></div>
            </div>            
        </div>
    </section>
   
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.5.1/dist/jquery.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-fQybjgWLrvvRgtW6bFlB7jaZrFsaBXjsOMm/tB9LTS58ONXgqbR9W8oWht/amnpF" crossorigin="anonymous"></script>
</body>
</html>
