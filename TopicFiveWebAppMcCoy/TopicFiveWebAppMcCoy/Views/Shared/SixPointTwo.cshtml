@model CountryViewModel
@{
    ViewData["Title"] = "SixPointTwo";    
}

<div class="row">
    <div class=" col-sm-3">
        <h3 class="mt-3">Category</h3>
        <div class="list-group">
            @foreach (Category cat in Model.Categories)
            {
                <a asp-action="WeekSixTwo"
                   asp-route-activeCat="@cat.CategoryID"
                   asp-route-division="@Model.ActiveGam"
                   class="list-group-item @Model.CheckActiveCat(cat.CategoryID)"
                   >cat.Name</a>
            }
        </div>
        <h3 class="mt-3">Game</h3>
        <div class="list-group">
            @foreach (Game gam in Model.Games)
            {
                <a asp-action="WeekSixTwo"
                   asp-route-activeCat="@gam.GameID"
                   asp-route-division="@Model.ActiveCat"
                   class="list-group-item @Model.CheckActiveGam(gam.GameID)">cat.Name</a>
            }
        </div>
        <div class="col-sm-9">
            <ul class="list-inline">
                @foreach (Country country in Model.Countries)
                {
                    <li class=" list-inline-item">
                        <img src="@country.FlagImage"
                             alt="@country.Name"
                             title="@country.Name | @country.Category.Name @country.Game.Name" />
                    </li>
                }
            </ul>
        </div>
    </div>
</div>
